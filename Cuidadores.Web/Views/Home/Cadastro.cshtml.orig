        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(x => x.TipoPessoa, new { @class = "form-group" })
                @Html.DropDownListFor(x => x.TipoPessoa, TipoPessoa.Cuidador.ToSelectList(), new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.TipoPessoa)
